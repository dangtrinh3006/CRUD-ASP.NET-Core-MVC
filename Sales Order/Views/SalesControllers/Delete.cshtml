@model Sales_Order.Models.Sales

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>Delete</h1>
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this?</h3>
                    <hr />

                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Sales Order:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.SalesOrder)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Sales Order Item:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.SalesOrderItem)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Work Order:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.WorkOrder)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Product ID:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.ProductID)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Product Description:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.ProductDescription)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Order Quantity:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.OrderQuantity)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Order Status:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.OrderStatus)</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 font-weight-bold">Timestamp:</div>
                        <div class="col-sm-8">@Html.DisplayFor(model => model.Timestamp)</div>
                    </div>

                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <button type="submit" class="btn btn-danger mr-2">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
