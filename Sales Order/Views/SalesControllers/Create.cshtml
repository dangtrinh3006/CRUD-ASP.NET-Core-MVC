@model Sales_Order.Models.Sales

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sales</h4>
<hr />
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <form asp-action="Create" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label asp-for="SalesOrder" class="control-label">Sales Order</label>
              <input asp-for="SalesOrder" class="form-control" />
              <span asp-validation-for="SalesOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="SalesOrderItem" class="control-label">Sales Order Item</label>
              <input asp-for="SalesOrderItem" class="form-control" />
              <span asp-validation-for="SalesOrderItem" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="WorkOrder" class="control-label">Work Order</label>
              <input asp-for="WorkOrder" class="form-control" />
              <span asp-validation-for="WorkOrder" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label asp-for="ProductID" class="control-label">Product ID</label>
              <input asp-for="ProductID" class="form-control" />
              <span asp-validation-for="ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="ProductDescription" class="control-label">Product Description</label>
              <input asp-for="ProductDescription" class="form-control" />
              <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="OrderQuantity" class="control-label">Order Quantity</label>
              <input asp-for="OrderQuantity" class="form-control" type="number" />
              <span asp-validation-for="OrderQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="OrderStatus" class="control-label">Order Status</label>
              <select asp-for="OrderStatus" class="form-control">
                <option value="Open">Open</option>
                <option value="Close">Close</option>
              </select>
              <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
          </div>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
      </div>
    </div>
  </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
